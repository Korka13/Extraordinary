<% include ./partials/header %>

  <div class="container text-center">
    <h1 class="text-center mt-3">Login</h1>
    <div class="row justify-content-center">
      <div class="col-xs-8 col-sm-6 col-md-6 col-lg-4">
        <div class="w-100 mx-auto my-3">
          <form action="/login" method="POST">
            <div class="form-group">
              <input type="text" class="form-control" placeholder="Username" name="username" required>
            </div>
            <div class="form-group">
              <input type="password" class="form-control" placeholder="Password" name="password" required>
            </div>
            <button class="btn btn-lg btn-success btn-default btn-block">Submit!</button>
          </form>
        </div>
      </div>
    </div>
    <p><a href="/register">Create a new account</a></p>
    <p><a href="/forgot">Forgot Username or Password?</a></p>
  </div>

<% include ./partials/footer %>