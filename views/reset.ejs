<% include ./partials/header %>
<div class="container text-center">
    <h1 class="text-center mt-3">Password reset</h1>
    <div class="row justify-content-center">
      <div class="col-auto"></div>
        <div class="col-xs-8 col-sm-6 col-md-6 col-lg-4">
          <div class="w-100 mx-auto my-3">
        <form action="/reset/<%= token %>" method="POST">
              <div class="form-group">
                <input type="password" class="form-control" placeholder="New password" name="password" required>
              </div>
              <div class="form-group">
                <input type="password" class="form-control" placeholder="Confirm password" name="confirm" required>
              </div>
                <button class="btn btn-lg btn-success btn-default btn-block">Update password</button>
              </div>
        </form>
        </div>
        <div class="col-auto"></div>
        </div>
        <a href="/forgot">Resend email</a>
    </div>

<% include ./partials/footer %>